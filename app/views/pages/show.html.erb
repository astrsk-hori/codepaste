<div>
  <span class="col-md-8">
    <p>
      <%= view_tags @page.tag.split(',') %>
    </p>
  </span>
  <span class="text-right">
    <p>
      <%= @page.user_name.presence || current_user.name %>
    </p>
  </span>
</div>
<div id="markdown">
  <hr>
  <p>
    <%= markdown "# #{@page.title}" %>
  </p>

  <p>
    <%= markdown @page.body %>
  </p>
</div>
<br />
<br />
<% @comments.each do |v| %>
  <hr>
  <div class="clearfix">
    <div class=".pull-left">
      <%= markdown v.comment %>
    </div>
    <br />
    <br />
    <div class=".pull-left">
      <strong><%= v.user.name %>.</strong> <%= v.created_at.to_time.strftime('%Y/%m/%d %H:%M:%S') %>
    </div>
  </div>
<% end %>
<br />
<br />
<hr>
<%= render 'comment_form' %>
<br />
<br />

<%= link_to 'Edit', edit_page_path(@page), {class: "btn btn-primary active",  role: "button"} if current_user.id == @page.user_id %>
<%= link_to 'Back To List.', pages_path, {class: "btn btn-default active",  role: "button"} %>
<br />
<br />
