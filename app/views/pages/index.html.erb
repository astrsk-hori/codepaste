<%= link_to 'New Page', new_page_path, {class: "btn btn-primary active",  role: "button"} %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Tag</th>
      <th>User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.tag %></td>
        <td><%= page.user_name %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
